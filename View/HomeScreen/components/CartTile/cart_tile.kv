#:import Animation kivy.animation.Animation
<CartTile>
    # id:1
    quantity: '1'
    price: '12000'
    title: 'Chicken'
    height: dp(120)
    anchor: 'right'
    images: {'image1':''}
    trash_btn:trash_btn
    SwipeLayerBoxShadow:
        # elevation:1
        MDRelativeLayout:
            IconRightWidget:
                id: trash_btn
                icon: 'trash-can'
                pos_hint: {'right':1, 'center_y':.5}
                on_press:
                    # self.parent.parent.parent.parent.parent.parent.parent.parent.parent.parent.controller.cart_remove_item(args[0][1]['id'],pro['pk'])

    MDCardSwipeFrontBox:
        md_bg_color: app.theme_cls.bg_light
        on_press: 
            (Animation(\
            x=-50,\
            t='out_quad',\
            d=0.02/1,\
            )+\
            Animation(\
            x=0,\   
            t='in_quad',\
            d=0.5/1,\
            )).start(self)
        MDRelativeLayout:
            ImageLeftWidget:
                size_hint: None, None
                width: dp(80)
                radius: dp(8)
                height: self.parent.height-6
                source: '{}'.format(app.request_parm.route('media')+root.images['image1'])
                # source: 'assets/images/cate-1.jpg'                    
                pos_hint: {'center_x': .12,'center_y': 0.5}
            
            MDBoxLayout:
                adaptive_width:True
                width:self.parent.width/2
                pos_hint: {'center_x': .52,'center_y': 0.5}
                orientation: 'vertical'
                # md_bg_color: app.theme_cls.primary_dark
                MDLabel:
                    text: root.title
                    shorten: True
                    # shorten_from: 'right'
                    font_style: 'H6'
                    theme_text_color: 'Custom'
                    color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]

                
                MDLabel:
                    text: f"₦{round(float(root.price)*float(qty.text),2)}/kg"
                    font_style: 'Body2'
                    theme_text_color: 'Custom'
                    color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]

                MDLabel:
                    text: "₦12000.00"
                    font_style: 'Body2'
                    theme_text_color: 'Custom'
                    color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]

            MDBoxLayout:
                adaptive_width: True
                pos_hint: {'right': 1,'center_y': 0.5} 
                IconRightWidget: 
                    id: minus_btn
                    icon: 'minus'
                    on_release:
                        qty.text = str(int(qty.text)-1) if int(qty.text)>1 else qty.text
                MDLabel:
                    id: qty
                    text: root.quantity
                    theme_text_color: 'Custom'
                    color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]

                IconRightWidget:
                    id: plus_btn
                    icon: 'plus'
                    on_release:
                        qty.text = str(int(qty.text)+1)

<SwipeLayerBoxShadow@MDCardSwipeFrontBox+FakeRectangularElevationBehavior>
    md_bg_color: app.theme_cls.bg_darkest