#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import colors kivymd.color_definitions.colors

<CustomScroll@MDScrollViewRefreshLayout+RecycleView>
<HomeScreenView>
    md_bg_color: app.theme_cls.primary_color
    MDBottomNavigation:
        id: botton_nav
        # md_bg_color: app.theme_cls.primary_color

        # Add a NavigationItem for each Navigation.
        MDBottomNavigationItem:
            md_bg_color: app.theme_cls.primary_color

            # md_bg_color: app.theme_cls.bg_normal
            name: "home screen"
            text: "Home"
            icon: 'home-outline'
            title: 'home'
            
            on_enter:
                root.controller.server_request()

            # Add Contents here
            MDScrollViewRefreshLayout:
                id: home_refresh_layout
                root_layout: root
                effect_cls: "ScrollEffect"
                refresh_callback: root.refresh_callback
                adaptive_height: True
                always_overscroll: False
                # smooth_scroll_end:10
                scroll_timeout: 250
                do_scroll_x: False
                do_scroll_y: False
                
                MDGridLayout:
                    size_hint_y: None
                    height: self.minimum_height
                    cols:1
                    md_bg_color: app.theme_cls.bg_normal
                    MDBoxLayout:
                        adaptive_height: True
                        spacing: dp(8)
                        padding: [dp(10),dp(14),dp(10),dp(4)]
                        md_bg_color: app.theme_cls.primary_color
                        Avatar:
                            on_release:
                                app.onNextScreen(root.name, 'login screen')
                        MDBoxLayout:
                            padding: dp(10)
                            spacing: dp(10)
                            orientation: 'vertical'
                            MDLabel:
                                id: username
                                text: "Hi Hamza Zaid"
                                font_style: "H6"
                            MDLabel:
                                text: "welcome to our store"
                                font_style: "Caption"
                        MDIconButton:
                            icon: "moon-waning-crescent" if app.theme_cls.theme_style == 'Light' else 'weather-sunny'
                            on_release: app.change_theme(self.icon)
                    MDBoxLayout:
                        adaptive_height: True
                        padding: [dp(20),dp(5),dp(23),dp(20)]
                        size_hint_x: .9
                        pos_hint_y: .8
                        radius: [0,0,dp(23),dp(23)]
                        orientation: 'vertical'
                        md_bg_color: app.theme_cls.primary_color
                        MDTextField:
                            id: search_field
                            mode: "round"
                            icon_left: "magnify"
                            hint_text: "Search Products Categories"
                            multiline: False
                            font_size: '18sp'
                            coursor_width: '1.5sp'
                            on_focus: True
                            background_color: 1, 1, 1, 1
                            # background_color: get_color_from_hex('#ffd747')
                            # foreground_color: get_color_from_hex('#ffd747')
                    MDBoxLayout:
                        padding: [10,0,0,0]
                        adaptive_height: True
                        MDBoxLayout:
                            height: root.height/9.8
                            size_hint_y: None
                            ScrollView:
                                do_scroll_y: False
                                bar_width: 0
                                MDBoxLayout:
                                    id: categories_layout
                                    orientation: 'horizontal'
                                    adaptive_width: True
                                    spacing: dp(10)
                                    padding: [dp(15),0,0,0]
                                    StoryWithIcon:
                                    StroyWithImage:
                                    StroyWithImage:
                                    StroyWithImage:
                                    StroyWithImage:
                                    StroyWithImage:
                    MDBoxLayout:
                        size_hint_y: None
                        height: root.height/4
                        padding: dp(10)
                        # md_bg_color: get_color_from_hex(colors['Red']['400'])
                        HomeAds:   
                    MDBoxLayout:
                        adaptive_height: True
                        size_hint_y: None
                        height: root.height
                        # MDGridLayout:
                        #     id: view_1
                        #     spacing: dp(20)
                        #     padding: dp(10)
                        #     size_hint_y: None
                        #     default_size: None, None
                        #     default_size_hint: .1, None
                        #     height: self.minimum_height
                        #     cols: 2
                        #     md_bg_color: get_color_from_hex(colors['Brown']['400'])

                            #  (Animation(\
                            # x=-50,\
                            # t='out_quad',\
                            # d=0.02/1,\
                            # )+\
                            # Animation(\
                            # x=0,\   
                            # t='in_quad',\
                            # d=0.5/1,\
                            # )).start(self)

                        CustomScroll:
                            root_layout: root
                            refresh_callback: root.refresh_callback
                            scroll_timeout:125
                            # do_scroll_y: False
                            smooth_scroll_end:10
                            do_scroll_x: False
                            id: view_1
                            
                            RecycleGridLayout:
                                spacing: dp(20)
                                padding: dp(10)
                                size_hint_y: None
                                default_size: None, None
                                default_size_hint: .1, None
                                height: self.minimum_height
                                cols: 2
                                # md_bg_color: get_color_from_hex(colors['Brown']['400'])

        MDBottomNavigationItem:
            name: 'Cart screen'
            icon: 'cart-outline'
            text: 'Cart'
            on_enter: 
                view_2.data = []
                root.controller.cart_server_request()

            # ScrollView:¬
            MDBoxLayout:
                size_hint_y: None
                height: root.height - dp(55)
                padding: dp(20)
                spacing: dp(15)
                orientation: 'vertical'
                MDLabel:
                    text: "Cart Summary"
                    halign: 'center'
                    font_style: 'H5'
                    adaptive_height:True
                BoxWithShadow:
                    size_hint_y: None
                    height: root.height/4
                    padding: dp(20)
                    pos_hint: {'top':1}
                    orientation: 'vertical'
                    MDLabel:
                        adaptive_height: True
                        id: order_ref_code
                        text: "text"
                        halign: 'center'
                        font_style: 'Caption'
                        theme_text_color: 'Custom'
                        color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]

                    MDBoxLayout:
                        MDBoxLayout:
                            orientation: 'vertical'
                            MDLabel:
                                text: "Price(2)"
                                font_style: 'Body2'
                                halign: 'left'
                                theme_text_color: 'Custom'
                                color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]

                            MDLabel:
                                text: "Shipping"
                                font_style: 'Body2'
                                halign: 'left'
                                theme_text_color: 'Custom'
                                color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]

                            MDSeparator:
                            MDLabel:
                                text: "Total"
                                font_style: 'H6'
                                halign: 'left'
                                theme_text_color: 'Custom'
                                color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]

                        MDBoxLayout:
                            orientation: 'vertical'
                            MDLabel:
                                id: products_price
                                text: "₦12000.00"
                                font_style: 'Body2'
                                halign: 'right'
                                theme_text_color: 'Custom'
                                color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]

                            MDLabel:
                                id: shipping_price
                                text: "FREE"
                                font_style: 'Body2'
                                halign: 'right'
                                theme_text_color: 'Custom'
                                color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]

                            MDSeparator:
                            MDLabel:
                                id: total_all
                                text: "₦12000.00"
                                font_style: 'H6'
                                halign: 'right'
                                theme_text_color: 'Custom'
                                color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]

                RecycleView:
                    id: view_2
                    do_scroll_x:False
                    RecycleGridLayout:
                        cols:1
                        spacing: dp(20)
                        adaptive_height: True
                        default_size: None, None
                        default_size_hint: .1, None
                        padding: dp(5)
                        size_hint_y: None
                        height: self.minimum_height
                MDFillRoundFlatButton:
                    id: checkout_btn
                    text: 'Checkout'
                    font_style: 'Button'
                    font_size: '20sp'
                    size_hint: .9, .114
                    # height: 40
                    disabled: 'True' if view_2.data==[] else False
                    rounded_button: False
                    pos_hint: {'center_x': 0.5,'center_y': 1}
                    on_release:
                        app.onNextScreen(root.name, 'checkout screen',{'quantity':products_price.text,'price':total_all.text, 'ref_code': order_ref_code.text})

        
        MDBottomNavigationItem:
            name: 'favourites screen'
            icon: 'heart-outline'
            text: 'Wishlist'
            MDBoxLayout:
                orientation: 'vertical'
                padding: 15
                spacing: 20
                MDLabel:
                    adaptive_height: True
                    text: "Wishlist"
                    font_style: 'H5'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]

                RecycleView:
                    id: view_3
                    do_scroll_x: False
                    RecycleGridLayout:
                        cols:1
                        spacing: 20
                        adaptive_height: True
                        default_size: None, None
                        default_size_hint: .1, None
                        padding: 5
                        size_hint_y: None
                        height: self.minimum_height

        MDBottomNavigationItem:
            name: 'profile screen'
            icon: 'account-outline'
            text: 'Profile'
            MDBoxLayout:
                orientation: 'vertical'
                FitImage:
                    opacity: 0.8
                    size_hint_y: .4
                    source: 'assets/images/img1.jpg'
                ScrollView:
                    size_hint_y: .6
                    MDList:
                        AccountItem:
                            text: 'My Account'
                            on_release:
                                app.onNextScreen(root.name, 'my account screen')
                            IconLeftWidget:
                                icon: 'account'
                        AccountItem:
                            text: 'Orders'
                            on_release:
                                app.onNextScreen(root.name, 'order history screen')
                            IconLeftWidget:
                                icon: 'cart'
                        AccountItem:
                            text: 'Addresses'
                            on_release:
                                app.onNextScreen(root.name, 'addresses screen')
                            IconLeftWidget:
                                icon: 'map-marker'
                        AccountItem:
                            text: 'Feed'
                            on_release:
                                app.onNextScreen(root.name, 'feed screen')
                            IconLeftWidget:
                                icon: 'phone'
                        AccountItem:
                            text: 'Logout'
                            on_release:
                                #app.onNextScreen(root.name, '')
                            IconLeftWidget:
                                icon: 'account-lock'
            Avatar:
                size: dp(120),dp(120)
                pos_hint: {'center_x': 0.5,'center_y': 0.9}
                on_press:
                    app.onNextScreen(root.name, 'login screen')


            TwoLineIconListItem:
                id: user_detail
                text: 'Hamza Zaid'
                secondary_text: 'hamza@gmail.com'
                pos_hint: {'center_x': 0.65,'center_y': 0.77}
                divider: None
                


<AccountItem@OneLineIconListItem>
    height: "84dp"
    _txt_bot_pad: "32dp"


<Avatar@ButtonBehavior+MDFloatLayout>
    size_hint: None, None
    size: dp(55),dp(55)
    # elevation:5
    radius: sp(self.width/2)
    md_bg_color: app.theme_cls.primary_light
    source: 'assets/images/man-1.png'
    FitImage:
        size: root.size[0]-3, root.size[1]-3
        size_hint: None, None
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        radius: dp(30)
        source: root.source

<StoryWithIcon@MDBoxLayout>
    orientation: 'vertical'
    size_hint: None, None
    width: dp(60)
    spacing: 5
    MDIconButton:
        icon: 'menu'
        theme_text_color: 'Custom'
        pos_hint: {'center_x': 0.5, 'center_y': .5}
        text_color: [1,1,1,1]
        md_bg_color: app.theme_cls.primary_dark
        icon_size: '28sp'
        on_release: app.onNextScreen('home screen', 'categories screen')

    MDLabel:
        text: "Categories"
        size: self.texture_size
        theme_text_color: 'Primary'
        size_hint_y: None
        halign: 'center'
        font_size: 12
        bold: True
        # parent_background: 0,0,0,0
        theme_text_color: 'Custom'
        color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]
        # opposite_colors: True

<StroyWithImage@ButtonBehavior+MDBoxLayout>
    orientation: 'vertical'
    size_hint: None, None
    spacing: 5
    width: avatar.width
    source: 'assets/images/cate-5.jpg'
    text: 'Grains'
    on_release: app.onNextScreen('home screen', 'categories screen')

    Avatar: 
        id: avatar
        source: root.source
        size: dp(50),dp(50)
        pos_hint: {'center_x':.5}
    MDLabel:
        text: root.text
        theme_text_color: 'Primary'
        size_hint_y: None
        size: self.texture_size
        font_size: '12sp'
        shorten: True
        shorten_from: 'right'
        halign: 'center'
        bold: True
        color: 1, 1, 1, 1
        # opposite_color: True
        theme_text_color: 'Custom'
        color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]


# <BoxWithShadow@MDBoxLayout+FakeRectangularElevationBehavior>
<BoxWithShadow@MDBoxLayout>
    md_bg_color: app.theme_cls.bg_light
    # elevation:1
    radius:dp(10)
