<ChipLabel@MDLabel>
    theme_text_color: 'Primary'

<QtyCard@MDFloatLayout+FakeRectangularElevationBehavior>
    adaptive_size: True
    size_hint: None, None
    height: 52
    elevation: 2
    md_bg_color: app.theme_cls.bg_light
    radius: 15
    MDLabel
        text: 'Qty'
        pos_hint: {'center_x': 0.55,'center_y': 0.5}
    Btnqty:
        icon: 'minus'
        pos_hint: {'center_x': 0.45,'center_y': 0.5}
        on_release: qty.text = str(int(qty.text)-1) if int(qty.text)>1 else qty.text 
    Btnqty:
        icon: 'plus'
        pos_hint: {'center_x': 0.87,'center_y': 0.5}
        on_release: qty.text = str(int(qty.text)+1) 
    MDTextField:
        id: qty
        adaptive_width: True
        size_hint_x: .2
        text: '1'
        check_text: int
        max_text_length: 2
        pos_hint: {'center_x': 0.67,'center_y': 0.55}
        theme_text_color: 'Primary'
        color: [0,0,0,0]
<Btnqty@MDIconButton>
    size_hint: .1,.1

