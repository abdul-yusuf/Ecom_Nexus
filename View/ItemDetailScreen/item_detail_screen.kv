<ItemDetailScreenView>
    md_bg_color: app.theme_cls.bg_normal
    on_enter:
        root.model.notify_observers(self.name,app.screen_args[0])
    MDBoxLayout:
        orientation: 'vertical'
        CarouselSlide:
            id: carousel
            size_hint_y: .42
            source1: 'assets/images/cate-12.jpg'
            
        ScrollView:
            size_hint_y: .58
            MDList:
                padding: 18
                spacing: 24
                MDBoxLayout:
                    adaptive_height: True
                    spacing: 12
                    padding: 0,0,0,12
                    Avatar:
                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        ChipLabel:
                            id: vendor
                            adaptive_height: True
                            text: 'Div Farm'
                            font_style: 'Body1'
                        ChipLabel: 
                            adaptive_height: True
                            text: 'Vendor'
                            font_style: 'Caption'
                    ChipLabel:
                        id: price
                        text: 'â‚¦12000.00/kg'
                        halign: 'right'
                ChipLabel:
                    id: title
                    text: 'Chicken'
                    font_style: 'H6'
                    bold: True
                Widget: 
                    size_hint_y: None
                    height: dp(12)
                MDRelativeLayout:
                    QtyCard:
                        pos_hint: {'center_x': 0.85,}

                ChipLabel: 
                    text: 'Description'
                    font_style: 'Body1'
                MDSeparator:
                    adaptive_width: True
                    width: dp(215)
                ChipLabel:
                    id: description
                    text: 'Lorem ipusm Lorem Lorem ipusm Lorem Lorem ipusm Lorem Lorem ipusm Lorem Lorem ipusm Lorem'
                    font_style: 'Body2'
                Widget: 
                    size_hint_y: None
                    height: dp(12)
                ChipLabel:
                    text: 'MORE DETAIL'
                    font_style: 'H6'
                MDSeparator:
                ChipLabel:
                    text: 'Categories'
                MDBoxLayout:
                    adaptive_size: True
                    padding: 8
                    spacing: 8
                    MDChip:
                        text: 'Chicken'
                        md_bg_color: app.theme_cls.primary_light
                        _no_ripple_effect: True
                    MDChip:
                        text: 'Suya'
                        md_bg_color: app.theme_cls.primary_light
                        _no_ripple_effect: True
                # ExpansionPanel:
                #     panel_cls: MDExpansionPanelOneLine(text='Review')

        MDBoxLayout:
            # adaptive_height: True
            size_hint_y: None
            height: dp(85)
            padding: dp(10)
            spacing: dp(15)
            MDFillRoundFlatButton:
                text: 'Add To Cart'
                adaptive_size: True
                rounded_button: False
                size_hint: .8, None
                size_hint_y: .8
                font_style: 'Button'     
                on_press: 
                    root.controller.server_request(app.screen_args[0]['pk'])   
                    root.show_alert_dialog()
                    # app.onNextScreen(root.name, 'home screen', 'switch_to', 'Cart screen')
                    # app.manager_screen.ids.botton_nav.name
    MDIconButton:
        icon: 'arrow-left'
        y: root.height-(self.height+dp(12))
        x: 6
        md_bg_color: app.theme_cls.bg_light
        on_release: app.onBackBtnx()

                    
<ChipLabel@MDLabel>
    theme_text_color: 'Custom'
    color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]


<QtyCard@MDFloatLayout>
    adaptive_size: True
    size_hint: .3, None
    padding: dp(10)
    height: dp(42)
    # elevation: 2
    md_bg_color: app.theme_cls.bg_light
    radius: dp(15)
    # MDLabel
    #     # adaptive_width: True
    #     text: 'Qty'
    #     font_size: '12sp'
    #     pos_hint: {'center_x': 0.58,'center_y': 0.5}
    Btnqty:
        icon: 'minus'
        pos_hint: {'center_x': 0.2,'center_y': 0.5}
        on_release: qty.text = str(int(qty.text)-1) if int(qty.text)>1 else qty.text 
    Btnqty:
        icon: 'plus'
        pos_hint: {'center_x': 0.8,'center_y': 0.5}
        on_release: qty.text = str(int(qty.text)+1) 
    TextInput:
        multiline: False
        background_color: 1, 1, 1, 0
        id: qty
        # adaptive_width: True
        size_hint_x: .4
        size_hint_y:.7
        text: '1'
        check_text: int
        max_text_length: 2
        disabled: 'True'
        halign:'left'
        font_size: '12sp' if int(self.text)>9 else '16sp'
        pos_hint: {'center_x': 0.48,'center_y': 0.46}
        # opposite_colors: True
    
    MDLabel:
        text: 'kg'
        font_size: '12sp'
        pos_hint: {'center_x': 1,'center_y': 0.5}
        theme_text_color: 'Custom'
        color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]


        # theme_text_color: 'Primary'
        # color: [0,0,0,0]
<Btnqty@MDIconButton>
    size_hint: .3,.4

