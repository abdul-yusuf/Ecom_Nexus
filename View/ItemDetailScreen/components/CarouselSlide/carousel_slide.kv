#:import get_color_from_hex kivy.utils.get_color_from_hex
<CarouselSlide>
    source1: ''
    source2: 'assets/images/cate-1.jpg'
    source3: ''
    source4: ''

    MDCarousel:
        id: carousel_head
        loop: True
        FitImage:
            source: "https://nexusv2-production.up.railway.app/media/cate-1_xulP6l5.jpg"
            radius: [0,0,20,20]
        # FitImage:
        #     source: root.source2
        #     radius: [0,0,20,20]
        # FitImage:
        #     source: root.source3
        #     radius: [0,0,20,20]
        # FitImage:
        #     source: root.source4
        #     radius: [0,0,20,20]
        
    CountBox:
        id: count_box
        # current: str(carousel.index+1) if str(carousel.index+1) else '_' 
        # total: str(len(carousel.slides )) 
        md_bg_color: get_color_from_hex('#1e1e1e')
        pos_hint: {'center_x': 0.85,'center_y': 0.08}

<CountBox@MDBoxLayout>
    # md_bg_color: app.theme_cls.primary_dark
    size: dp(45),dp(20)
    size_hint: None, None
    current: '1'
    total: '2'
    radius: 8
    padding:5
    MDLabel:
        text: f'{root.current}/{root.total}'
        color: get_color_from_hex('#ffffff')
        halign: 'center'
        theme_text_color: 'Custom'
        color: [0,0,0,1]

        # theme_text_color: 'Custom'