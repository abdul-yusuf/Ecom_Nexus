<EmailVerificationScreenView>
    MDLabel:
        text: "Email Verification"
        color:
        font_style: 'H5'
        pos_hint: {'center_x': 0.65,'center_y': .95}

    MDIconButton:
        icon: 'arrow-left'
        pos_hint: {'center_y': .95}
        user_font_size: '30sp'
        theme_text_color: 'Custom'
        text_color: get_color_from_hex(colors['Blue']['800'])
        on_release:
            app.onBackBtnx()

    MDTextField:
        id: box1
        size_hint: .1, None
        # max_text_length: 1
        pos_hint: {'center_x': 0.2,'center_y': 0.8}
        mode: 'rectangle'
        font_size: '28sp'
        on_text:
            box2.focus=True
            
    MDTextField:
        id: box2
        size_hint: .1, None
        # max_text_length: 1
        pos_hint: {'center_x': 0.4,'center_y': 0.8}
        font_size: '28sp'
        mode: 'rectangle'
        on_text:
            box3.focus=True
            
    MDTextField:
        id: box3
        size_hint: .1, None
        # max_text_length: 1
        pos_hint: {'center_x': 0.6,'center_y': 0.8}
        font_size: '28sp'
        mode: 'rectangle'
        on_text:
            box4.focus=True
        
    MDTextField:
        id: box4
        size_hint: .1, None
        # max_text_length: 1
        pos_hint: {'center_x': 0.8,'center_y': 0.8}
        font_size: '28sp'
        mode: 'rectangle'
        on_text:
            self.focus = False
            root.controller.email_confirm(box1.text+box2.text+box3.text+box4.text)
            # box2.focus=True
                
        # hint_text: 'Enter Code'
    
    MDLabel:
        text: "text"
        color: