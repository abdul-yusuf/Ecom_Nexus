<SignUpScreenView>
    RelativeLayout:
        HomeTile:


<HomeTile@MDBoxLayout+RoundedRectangularElevationBehavior>
    elavation: 5
    size_hint: .5, None
    height: 260
    orientation: 'vertical'
    radius: 20
    md_bg_color: app.theme_cls.bg_light
    RelativeLayout:
        FitImage:
            id: home_tile_image
            source: 'assets/images/cate-1.jpg'
            radius: [10,10,15,15]
        MDIconButton:
            icon: "heart-outline"
            pos_hint: {'center_x': 0.82,'center_y': 0.82}
            theme_text_color: "Error"
            md_bg_color: get_color_from_hex(colors['Gray']['50'])
        MDIconButton:
            icon: "cart-plus"
            pos_hint: {'center_x': 0.82,'center_y': 0.05}
            md_bg_color: app.theme_cls.bg_normal
    RelativeLayout:
        padding: 5
        size_hint_y: None
        height: self.parent.height/4
        MDLabel:
            text: "Chicken"
            font_style: 'H6'
            pos_hint: {'center_x': 0.53,'center_y': 0.83}
        MDLabel:
            text: "₦2200000"
            font_style: 'Body2'
            pos_hint: {'center_x': 0.54,'center_y': 0.5}
            MDBoxLayout:
                padding:[15,0]
                MDFloatLayout:
                    adaptive_height: True
                    adaptive_width: True
                    height: 2.5
                    width: self.parent.width/1.8
                    pos_hint: {'center_x': 1,'center_y': .33}
                    md_bg_color: get_color_from_hex(colors['Gray']['400'])
        MDLabel:
            text: "₦2100"
            font_style: 'Body2'
            pos_hint: {'center_x': .9,'center_y': 0.5}
        MDLabel:
            text: "Rating :"
            font_style: "Overline"
            pos_hint: {'center_x': 0.53,'center_y': 0.23}
        MDLabel:
            text: "4.5"
            font_style: "Overline"
            pos_hint: {'center_x': 0.76,'center_y': 0.23}