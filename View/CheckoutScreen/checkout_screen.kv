                            MDLabel:
                                text: "(+234)234 546 4543"
                                font_style: 'Caption'
                            MDLabel:
                                text: "No 21 Pashama Road Ungwan Rimi Kaduna, Kaduna Nigeria"
                                font_style: 'Caption'

                    
                BoxWithShadow:
                    # adaptive_height:True
                    size_hint_y: None
                    height: 160
                    orientation: 'vertical'
                    padding: [20,10]
