<CheckoutScreenView>
    MDBoxLayout:
        orientation: 'vertical'
        padding:20
        spacing:20
        MDLabel:
            adaptive_height: True
            text: "Order Checkout"
            font_style: 'H5'
            halign: 'center'
        BoxWithShadow:
            size_hint_y: .3
            padding: 20
